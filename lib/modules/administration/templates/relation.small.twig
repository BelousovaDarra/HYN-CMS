<table class='table table-striped table-condensed table-bordered'>
	<tbody>
		<tr>
			<th>
				{{ _("company")|capitalize }}
			</th>
			<td>
				{{ relation.companytype }}
			</td>
			{% if relationmap and relation.gmaps_address %}
			<td rowspan="5" class="span4 relation-location-map">
				<div class="modal hide">
					<div class="modal-header">
						<a class="close" data-dismiss="modal" >&times;</a>
						<h3>{{ relation.name }}</h3>
					</div>
					<div class="modal-content" id="relation-modal-map">
						
					</div>
					<div class="modal-footer">
						<a data-dismiss="modal" href="" class="btn">{{ _("cancel") }}</a>
					</div>
				</div>
				<div id="{{ relationmap.id }}" class="height-to-parent">
					{# show relation Google Map #}
				</div>
			</td>
			{% endif %}
		</tr>
		<tr>
			<th>
				{{ _("tax no")|capitalize }}
			</th>
			<td>
				{{ relation.taxno }}
			</td>
		</tr>
		<tr>
			<th>
				{{ _("coc no")|capitalize }}
			</th>
			<td>
				{{ relation.cocno }}
			</td>
		</tr>
		<tr>
			<th>
				{{ _("address")|capitalize }}
			</th>
			<td>
				{{ relation.address }} {{ relation.houseno }}
			</td>
		</tr>
		<tr>
			<th>
				{{ _("location")|capitalize }}
			</th>
			<td>
				<img class='padded-s' src='/media/icons/flags/{{ relation.country|lower }}.png' /> {{ relation.city }}, {{ relation.country }}
			</td>
		</tr>
	</tbody>
</table>