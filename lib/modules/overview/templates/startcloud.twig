	{% include "header" %}
	<div class="hero-unit">
		<form method="POST">
			<fieldset style="width: 410px; float: left; display: block;">
				<legend>Jumpstart</legend>
				<div class="clearfix">
					<label for="name">Name your cloud</label>
					<div class="input">
						<div class="input-append">
							<input type="text" name="name" id="name" />
							<label class="add-on"
								data-popover-placement="right" data-popover-content="Your requested cloudname must be unique." data-popover-title="Unique cloud name">
								<input type="checkbox" id="name-valid" disabled />
							</label>
						</div>
					</div>
				</div>
				<div class="clearfix">
					<label for="email">E-mail address</label>
					<div class="input"><input type="text" name="email" id="email" /></div>
				</div>
				<div class="clearfix">
					<label for="lastname">Name</label>
					<div class="input"><input type="text" name="lastname" id="lastname" class="span2" placeholder="first name" />
					<input type="text" name="lastname" id="lastname" class="span2" placeholder="last name" /></div>
				</div>
				<div class="clearfix">
					<label for="password">Password</label>
					<div class="input">
						<div class="input-append">
							<input type="password" name="password" class="span2" id="password" />
							<label class="add-on" 
								data-popover-placement="right" data-popover-content="Enter a password which matches the following criteria: <ul><li>at least 6 characters</li><li>at least one symbol (eg #,.)</li><li>at least one number</li></ul>" data-popover-title="Safe password">
								<input type="checkbox" id="password-valid" disabled />
							</label>
						</div>
					</div>
				</div>
				<div class="clearfix">
					<label for="pw-check">Repeat password</label>
					<div class="input">
						<div class="input-append">
							<input type="password" name="pw-check" class="span2" id="pw-check" />
							<label class="add-on" data-popover-placement="right" data-popover-content="Correctly repeat your password." data-popover-title="Repeat password">
								<input type="checkbox" id="pw-check-valid" disabled />
							</label>
						</div>
					</div>
				</div>
				<div class="clearfix">
					<label for="accept">Accept</label>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="checkbox" name="accept" value="ga" />
									<span>the general agreement</span>
								</label>
							</li>
							<li>
								<label>
									<input type="checkbox" name="newsletter" value="1" />
									<span>subscription onto our newsletter list</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
			</fieldset>
			<fieldset style="width: 410px; float: right; display: block;">
				<legend>Your options</legend>
				<div class="clearfix">
					{# <label for="free-trial">7-day free trial</label> #}
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="checkbox" name="free-trial" value="1" checked />
									<span>7 day free trial</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
				<div class="clearfix">
					<label for="payment">Payment type</label>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="radio" name="payment" value="0" checked />
									<span>decide later</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="payment" value="1" />
									<span>periodic subscription</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="payment" value="2" />
									<span data-twipsy-content="Pay afterwards based on what you used">usage-based</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
				<div class="clearfix">
					<label for="payment">{{ domain }}</label>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="radio" name="order-domain" value="0" />
									<span>do not register</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="order-domain" value="1" />
									<span>register immediately</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="order-domain" value="7" checked />
									<span>register after my free trial</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
			</fieldset>
			<fieldset class="clearfix">
				<input type="submit" name="spark" class="btn large primary" value="Review" />
			</fieldset>
			<div class="clearfix"></div>
		</form>
	</div>
	{% include "salespoints" %}
	{% include "footer" %} 
