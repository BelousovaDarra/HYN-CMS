	{% include "header" %}
	<div class="hero-unit">
		<form method="POST">
			<fieldset style="width: 410px; float: left; display: block;">
				<legend>Jumpstart</legend>
				<div class="clearfix">
					<label for="name">Name your cloud</label>
					<div class="input">
						<div class="input-append">
							<input type="text" name="name" id="name" />
							<label class="add-on">
								<input type="checkbox" id="name-valid" disabled />
							</label>
						</div>
					</div>
				</div>
				<div class="clearfix">
					<label for="email">E-mail address</label>
					<div class="input"><input type="text" name="email" id="email" /></div>
				</div>
				<div class="clearfix">
					<label for="lastname">Last name</label>
					<div class="input"><input type="text" name="lastname" id="lastname" /></div>
				</div>
				<div class="clearfix">
					<label for="password">Password</label>
					<div class="input"><input type="password" class="span2" name="password" id="password" /></div>
				</div>
				<div class="clearfix">
					<label for="pw-check">Password again</label>
					<div class="input">
						<div class="input-append">
							<input type="password" name="pw-check" class="span2" id="pw-check" />
							<label class="add-on">
								<input type="checkbox" id="pw-valid" disabled />
							</label>
						</div>
					</div>
				</div>
				<div class="clearfix">
					<label for="accept">Accept</label>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="checkbox" name="accept" value="ga" />
									<span>the general agreement</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
			</fieldset>
			<fieldset style="width: 410px; float: right; display: block;">
				<legend>Your options</legend>
				<div class="clearfix">
					{# <label for="free-trial">7-day free trial</label> #}
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="checkbox" name="free-trial" value="1" checked disabled />
									<span>7 day free trial</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
				<div class="clearfix">
					<label for="payment">Payment type</label>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<input type="radio" name="payment" value="0" checked />
									<span>decide later</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="payment" value="1" />
									<span>periodic subscription</span>
								</label>
							</li>
							<li>
								<label>
									<input type="radio" name="payment" value="2" />
									<span>usage-based</span>
								</label>
							</li>
						</ul>
					</div>
				</div>
			</fieldset>
			<fieldset class="clearfix">
				<input type="submit" name="create" class="btn large primary" value="Go!" />
			</fieldset>
			<div class="clearfix"></div>
		</form>
	</div>
	{% include "salespoints" %}
	{% include "footer" %} 
