{% include "header" %}

<div class="row">

	<div class="box-modal span6">
		<div class="modal-header">
			<h3>{{ _("404: Page not found") }}</h3>
		</div>
		<div class="modal-body">
			{{ _("Obviously it seems like you requested a page which is not here.") }}
		</div>
		<div class="modal-body">
			{{ _("Perhaps the assumptions on the right hold a solution to your search.") }}
		</div>
	</div>

	<div class="box-modal span6">
		<div class="modal-header">
			<h3>{{ _("assumptions")|capitalize }}</h3>
		</div>
		<div class="modal-body">
			{% if assumptions %}
			
			{% else %}
			<div class="alert alert-info">
				{{ _("no possible alternatives found for this dead link.")|capitalize }}
			</div>
			{% endif %}
		</div>
		<div class="modal-footer">
			<a href="/" class="btn">{{ _("home") }}</a>
		</div>
	</div>

</div>

{% include "footer" %}